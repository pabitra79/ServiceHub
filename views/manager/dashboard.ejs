<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
      rel="stylesheet"
    />
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link href="/css/manager-dashboard.css" rel="stylesheet" />
  </head>
  <body>
    <div class="dashboard-container">
      <!-- SIDEBAR -->
      <div class="sidebar">
        <div class="sidebar-brand">
          <i class="fas fa-user-tie"></i>
          <h3>Manager Panel</h3>
        </div>

        <ul class="sidebar-menu">
          <li>
            <a
              href="/manager/dashboard"
              class="nav-link active"
              onclick="switchTab(event, 'dashboard')"
            >
              <i class="fas fa-home"></i>
              Dashboard
            </a>
          </li>

          <!-- Manage Bookings -->
          <li>
            <a href="#" class="nav-link" onclick="toggleSubmenu(event)">
              <i class="fas fa-tasks"></i>
              Manage Bookings
              <i class="fas fa-chevron-down" style="margin-left: auto"></i>
            </a>
            <ul class="submenu">
              <li>
                <a
                  href="/bookings/manager/bookings"
                  class="nav-link"
                  onclick="return true;"
                >
                  <i class="fas fa-list"></i> All Bookings
                </a>
              </li>
              <li>
                <a
                  href="/bookings/manager/bookings?action=add"
                  class="nav-link"
                  onclick="return true;"
                >
                  <i class="fas fa-plus-circle"></i> Add Booking
                </a>
              </li>
            </ul>
          </li>
          <!-- Manage Users -->
          <li>
            <a href="#" class="nav-link" onclick="toggleSubmenu(event)">
              <i class="fas fa-users"></i>
              Manage Users
              <i class="fas fa-chevron-down" style="margin-left: auto"></i>
            </a>
            <ul class="submenu">
              <li>
                <a href="#users-list" onclick="switchTab(event, 'users-list')">
                  <i class="fas fa-list"></i> All Users
                </a>
              </li>
              <li>
                <a href="#users-add" onclick="switchTab(event, 'users-add')">
                  <i class="fas fa-user-plus"></i> Add User
                </a>
              </li>
            </ul>
          </li>

          <!-- Manage Technicians -->
          <li>
            <a href="#" class="nav-link" onclick="toggleSubmenu(event)">
              <i class="fas fa-tools"></i>
              Manage Technicians
              <i class="fas fa-chevron-down" style="margin-left: auto"></i>
            </a>
            <ul class="submenu">
              <li>
                <a
                  href="#technicians-list"
                  onclick="switchTab(event, 'technicians-list')"
                >
                  <i class="fas fa-list"></i> All Technicians
                </a>
              </li>
              <li>
                <a
                  href="#technicians-add"
                  onclick="switchTab(event, 'technicians-add')"
                >
                  <i class="fas fa-user-plus"></i> Add Technician
                </a>
              </li>
            </ul>
          </li>
          <!-- feedback -->
          <li>
            <a href="/feedback/manager" class="nav-link">
              <i class="fas fa-comments"></i>
              Team Feedback
            </a>
          </li>
          <li>
            <a
              href="#reports"
              class="nav-link"
              onclick="switchTab(event, 'reports')"
            >
              <i class="fas fa-chart-bar"></i>
              Reports
            </a>
          </li>

          <li
            style="
              border-top: 1px solid rgba(255, 255, 255, 0.2);
              margin-top: 20px;
              padding-top: 20px;
            "
          >
            <a href="/manager/logout" class="nav-link">
              <i class="fas fa-sign-out-alt"></i>
              Logout
            </a>
          </li>
        </ul>
      </div>

      <!-- MAIN CONTENT -->
      <div class="main-content">
        <!-- TOPBAR -->
        <div class="topbar">
          <h1>Manager Dashboard</h1>
          <div class="user-info">
            <div class="user-avatar">
              <% if (user.userImage) { %>
              <img src="<%= user.userImage %>" alt="<%= user.name %>" />
              <% } else { %> <%= user.name.charAt(0).toUpperCase() %> <% } %>
            </div>
            <div class="user-details">
              <h4><%= user.name %></h4>
              <p><%= user.role.toUpperCase() %></p>
            </div>
          </div>
        </div>

        <!-- Flash Messages -->
        <% if (messages && messages.success) { %>
        <div
          class="alert alert-success alert-dismissible fade show"
          role="alert"
        >
          <%= messages.success %>
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="alert"
          ></button>
        </div>
        <% } %> <% if (messages && messages.error) { %>
        <div
          class="alert alert-danger alert-dismissible fade show"
          role="alert"
        >
          <%= messages.error %>
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="alert"
          ></button>
        </div>
        <% } %>

        <!-- DASHBOARD SECTION -->
        <div id="dashboard" class="content-section active">
          <div class="topbar" style="margin-bottom: 30px">
            <h2>Dashboard Overview</h2>
          </div>

          <!-- Stats Cards -->
          <div class="stats-container">
            <div class="stat-card">
              <div class="stat-card-icon bg-blue">
                <i class="fas fa-users"></i>
              </div>
              <p class="stat-card-title">Total Users</p>
              <p class="stat-card-number"><%= stats.totalUsers %></p>
            </div>

            <div class="stat-card">
              <div class="stat-card-icon bg-orange">
                <i class="fas fa-tools"></i>
              </div>
              <p class="stat-card-title">Total Technicians</p>
              <p class="stat-card-number"><%= stats.totalTechnicians %></p>
            </div>

            <div class="stat-card">
              <div class="stat-card-icon bg-warning">
                <i class="fas fa-clock"></i>
              </div>
              <p class="stat-card-title">Need Assignment</p>
              <p class="stat-card-number">
                <%= stats.pendingAssignments || 0 %>
              </p>
            </div>

            <div class="stat-card">
              <div class="stat-card-icon bg-info">
                <i class="fas fa-user-check"></i>
              </div>
              <p class="stat-card-title">Assigned</p>
              <p class="stat-card-number"><%= stats.assignedBookings || 0 %></p>
            </div>

            <div class="stat-card">
              <div class="stat-card-icon bg-primary">
                <i class="fas fa-tools"></i>
              </div>
              <p class="stat-card-title">In Progress</p>
              <p class="stat-card-number">
                <%= stats.inProgressBookings || 0 %>
              </p>
            </div>

            <div class="stat-card">
              <div class="stat-card-icon bg-success">
                <i class="fas fa-check-circle"></i>
              </div>
              <p class="stat-card-title">Completed Today</p>
              <p class="stat-card-number"><%= stats.completedToday || 0 %></p>
            </div>
          </div>

          <!-- Different Booking Categories -->
          <div class="booking-categories" style="margin-top: 30px">
            <!-- Pending Assignment Section -->
            <div class="booking-category">
              <div class="category-header bg-warning">
                <h3>
                  <i class="fas fa-clock"></i> Need Assignment (<%=
                  stats.pendingAssignments %>)
                </h3>
                <span>Assign technicians to these bookings</span>
              </div>

              <% if (pendingAssignmentBookings &&
              pendingAssignmentBookings.length > 0) { %>
              <div class="booking-cards">
                <% pendingAssignmentBookings.forEach(booking => { %>
                <div class="booking-card">
                  <div class="booking-header">
                    <h4><%= booking.serviceType.toUpperCase() %> Service</h4>
                    <span class="urgency-badge <%= booking.urgency %>"
                      ><%= booking.urgency %></span
                    >
                  </div>
                  <div class="booking-details">
                    <p>
                      <strong>Customer:</strong> <%= booking.customerName %>
                    </p>
                    <p><strong>Phone:</strong> <%= booking.customerPhone %></p>
                    <p>
                      <strong>Problem:</strong> <%=
                      booking.problemDescription.substring(0, 50) %>...
                    </p>
                    <p>
                      <strong>Preferred Date:</strong> <%= new
                      Date(booking.preferredDate).toLocaleDateString() %>
                    </p>
                  </div>
                  <div class="booking-actions">
                    <a
                      href="/bookings/manager/bookings?assign=<%= booking._id %>"
                      class="btn btn-primary btn-sm"
                    >
                      <i class="fas fa-user-plus"></i> Assign Technician
                    </a>
                    <a
                      href="/bookings/manager/bookings/details/<%= booking._id %>"
                      class="btn btn-info btn-sm"
                    >
                      <i class="fas fa-eye"></i> View
                    </a>
                  </div>
                </div>
                <% }); %>
              </div>
              <% } else { %>
              <div class="no-bookings">
                <p>No bookings need assignment</p>
              </div>
              <% } %>
            </div>

            <!-- Assigned Section -->
            <div class="booking-category">
              <div class="category-header bg-info">
                <h3>
                  <i class="fas fa-user-check"></i> Assigned (<%=
                  stats.assignedBookings %>)
                </h3>
                <span>Bookings assigned to technicians</span>
              </div>

              <% if (assignedBookings && assignedBookings.length > 0) { %>
              <div class="booking-cards">
                <% assignedBookings.forEach(booking => { %>
                <div class="booking-card">
                  <div class="booking-header">
                    <h4><%= booking.serviceType.toUpperCase() %> Service</h4>
                    <span class="status-badge assigned">Assigned</span>
                  </div>
                  <div class="booking-details">
                    <p>
                      <strong>Customer:</strong> <%= booking.customerName %>
                    </p>
                    <p>
                      <strong>Technician:</strong> <%= booking.technicianName %>
                    </p>
                    <p>
                      <strong>Specialization:</strong> <%=
                      booking.technicianSpecialization %>
                    </p>
                    <p>
                      <strong>Assigned Date:</strong> <%= new
                      Date(booking.assignedDate).toLocaleDateString() %>
                    </p>
                  </div>
                  <div class="booking-actions">
                    <span class="text-success">
                      <i class="fas fa-check-circle"></i> Assigned to <%=
                      booking.technicianName %>
                    </span>
                  </div>
                </div>
                <% }); %>
              </div>
              <% } else { %>
              <div class="no-bookings">
                <p>No assigned bookings</p>
              </div>
              <% } %>
            </div>

            <!-- In Progress Section -->
            <div class="booking-category">
              <div class="category-header bg-primary">
                <h3>
                  <i class="fas fa-tools"></i> In Progress (<%=
                  stats.inProgressBookings %>)
                </h3>
                <span>Technicians working on these</span>
              </div>

              <% if (inProgressBookings && inProgressBookings.length > 0) { %>
              <div class="booking-cards">
                <% inProgressBookings.forEach(booking => { %>
                <div class="booking-card">
                  <div class="booking-header">
                    <h4><%= booking.serviceType.toUpperCase() %> Service</h4>
                    <span class="status-badge in-progress">In Progress</span>
                  </div>
                  <div class="booking-details">
                    <p>
                      <strong>Customer:</strong> <%= booking.customerName %>
                    </p>
                    <p>
                      <strong>Technician:</strong> <%= booking.technicianName %>
                    </p>
                    <p>
                      <strong>Started:</strong> <%= new
                      Date(booking.workStartedAt).toLocaleDateString() %>
                    </p>
                    <p>
                      <strong>Address:</strong> <%= booking.serviceAddress %>
                    </p>
                  </div>
                  <div class="booking-actions">
                    <span class="text-warning">
                      <i class="fas fa-spinner"></i> Work in progress
                    </span>
                  </div>
                </div>
                <% }); %>
              </div>
              <% } else { %>
              <div class="no-bookings">
                <p>No bookings in progress</p>
              </div>
              <% } %>
            </div>
          </div>

          <!-- Recent Activity Section -->
          <div class="content-section" style="margin-top: 30px">
            <div class="section-header">
              <h2>Recent Activity</h2>
            </div>
            <div class="table-container">
              <table class="table">
                <thead>
                  <tr>
                    <th>Date</th>
                    <th>Activity</th>
                    <th>User</th>
                    <th>Details</th>
                  </tr>
                </thead>
                <tbody>
                  <% // Combine all bookings for recent activity const
                  allBookings = [ ...(pendingAssignmentBookings || []),
                  ...(assignedBookings || []), ...(inProgressBookings || [])
                  ].sort((a, b) => new Date(b.createdAt) - new
                  Date(a.createdAt)).slice(0, 5); %> <% if (allBookings.length >
                  0) { %> <% allBookings.forEach(booking => { %>
                  <tr>
                    <td>
                      <%= new Date(booking.createdAt).toLocaleDateString() %>
                    </td>
                    <td>New Booking Created</td>
                    <td><%= booking.customerName %></td>
                    <td>
                      <%= booking.serviceType %> service -
                      <span
                        class="badge badge-<%= booking.status === 'pending-manager-assignment' ? 'warning' : booking.status === 'assigned' ? 'info' : booking.status === 'in-progress' ? 'primary' : 'secondary' %>"
                      >
                        <%= booking.status.replace(/-/g, ' ') %>
                      </span>
                    </td>
                  </tr>
                  <% }); %> <% } else { %>
                  <tr>
                    <td colspan="4" style="text-align: center; color: #999">
                      No recent activity
                    </td>
                  </tr>
                  <% } %>
                </tbody>
              </table>
            </div>
          </div>
        </div>

        <!-- USERS LIST SECTION -->
        <div id="users-list" class="content-section" style="display: none">
          <div class="section-header">
            <h2>All Users</h2>
            <button
              class="btn-primary-custom"
              onclick="switchTab(event, 'users-add')"
            >
              <i class="fas fa-user-plus"></i> Add New User
            </button>
          </div>

          <div class="table-container">
            <table class="table">
              <thead>
                <tr>
                  <th>ID</th>
                  <th>Name</th>
                  <th>Email</th>
                  <th>Phone</th>
                  <th>Status</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% if (users && users.length > 0) { %> <% users.forEach(user =>
                { %>
                <tr>
                  <td>#<%= user._id.toString().slice(-4) %></td>
                  <td><%= user.name %></td>
                  <td><%= user.email %></td>
                  <td><%= user.phone %></td>
                  <td>
                    <span class="badge-status badge-user">
                      <%= user.isActive ? 'Active' : 'Inactive' %>
                    </span>
                  </td>
                  <td>
                    <div class="action-buttons">
                      <button
                        class="btn-small btn-view"
                        onclick="viewUser('<%= user._id %>')"
                      >
                        <i class="fas fa-eye"></i> View
                      </button>
                      <button
                        class="btn-small btn-edit"
                        onclick="editUser('<%= user._id %>')"
                      >
                        <i class="fas fa-edit"></i> Edit
                      </button>
                      <button
                        class="btn-small btn-delete"
                        onclick="deleteUser('<%= user._id %>')"
                      >
                        <i class="fas fa-trash"></i> Delete
                      </button>
                    </div>
                  </td>
                </tr>
                <% }); %> <% } else { %>
                <tr>
                  <td colspan="6" style="text-align: center; color: #999">
                    No users found
                  </td>
                </tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>

        <!-- TECHNICIANS LIST SECTION -->
        <div
          id="technicians-list"
          class="content-section"
          style="display: none"
        >
          <div class="section-header">
            <h2>All Technicians</h2>
            <button
              class="btn-primary-custom"
              onclick="switchTab(event, 'technicians-add')"
            >
              <i class="fas fa-user-plus"></i> Add New Technician
            </button>
          </div>

          <div class="table-container">
            <table class="table">
              <thead>
                <tr>
                  <th>ID</th>
                  <th>Name</th>
                  <th>Email</th>
                  <th>Phone</th>
                  <th>Specialty</th>
                  <th>Status</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% if (technicians && technicians.length > 0) { %> <%
                technicians.forEach(technician => { %>
                <tr>
                  <td>#<%= technician._id.toString().slice(-4) %></td>
                  <td><%= technician.name %></td>
                  <td><%= technician.email %></td>
                  <td><%= technician.phone %></td>
                  <td><%= technician.specialty || 'General' %></td>
                  <td>
                    <span class="badge-status badge-technician">
                      <%= technician.isActive ? 'Active' : 'Inactive' %>
                    </span>
                  </td>
                  <td>
                    <div class="action-buttons">
                      <button class="btn-small btn-view">
                        <i class="fas fa-eye"></i> View
                      </button>
                      <button class="btn-small btn-edit">
                        <i class="fas fa-edit"></i> Edit
                      </button>
                      <button class="btn-small btn-delete">
                        <i class="fas fa-trash"></i> Delete
                      </button>
                    </div>
                  </td>
                </tr>
                <% }); %> <% } else { %>
                <tr>
                  <td colspan="7" style="text-align: center; color: #999">
                    No technicians found
                  </td>
                </tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
    <script src="/js/manager-dashboard.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
