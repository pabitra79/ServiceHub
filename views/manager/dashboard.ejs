<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
      rel="stylesheet"
    />
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link href="/css/manager-dashboard.css" rel="stylesheet" />
  </head>
  <body>
    <div class="dashboard-container">
      <!-- SIDEBAR -->
      <div class="sidebar">
        <div class="sidebar-brand">
          <i class="fas fa-user-tie"></i>
          <h3>Manager Panel</h3>
        </div>

        <ul class="sidebar-menu">
          <li>
            <a
              href="/manager/dashboard"
              class="nav-link active"
              onclick="switchTab(event, 'dashboard')"
            >
              <i class="fas fa-home"></i>
              Dashboard
            </a>
          </li>

          <!-- Manage Bookings -->
          <!-- Manage Bookings -->
          <li>
            <a href="#" class="nav-link" onclick="toggleSubmenu(event)">
              <i class="fas fa-tasks"></i>
              Manage Bookings
              <i class="fas fa-chevron-down" style="margin-left: auto"></i>
            </a>
            <ul class="submenu">
              <li>
                <a
                  href="/bookings/manager/bookings"
                  class="nav-link"
                  onclick="return true;"
                >
                  <!-- ADD onclick="return true;" -->
                  <i class="fas fa-list"></i> All Bookings
                </a>
              </li>
              <li>
                <a
                  href="/bookings/manager/bookings?action=add"
                  class="nav-link"
                  onclick="return true;"
                >
                  <!-- ADD onclick="return true;" -->
                  <i class="fas fa-plus-circle"></i> Add Booking
                </a>
              </li>
            </ul>
          </li>
          <!-- Manage Users -->
          <li>
            <a href="#" class="nav-link" onclick="toggleSubmenu(event)">
              <i class="fas fa-users"></i>
              Manage Users
              <i class="fas fa-chevron-down" style="margin-left: auto"></i>
            </a>
            <ul class="submenu">
              <li>
                <a href="#users-list" onclick="switchTab(event, 'users-list')">
                  <i class="fas fa-list"></i> All Users
                </a>
              </li>
              <li>
                <a href="#users-add" onclick="switchTab(event, 'users-add')">
                  <i class="fas fa-user-plus"></i> Add User
                </a>
              </li>
            </ul>
          </li>

          <!-- Manage Technicians -->
          <li>
            <a href="#" class="nav-link" onclick="toggleSubmenu(event)">
              <i class="fas fa-tools"></i>
              Manage Technicians
              <i class="fas fa-chevron-down" style="margin-left: auto"></i>
            </a>
            <ul class="submenu">
              <li>
                <a
                  href="#technicians-list"
                  onclick="switchTab(event, 'technicians-list')"
                >
                  <i class="fas fa-list"></i> All Technicians
                </a>
              </li>
              <li>
                <a
                  href="#technicians-add"
                  onclick="switchTab(event, 'technicians-add')"
                >
                  <i class="fas fa-user-plus"></i> Add Technician
                </a>
              </li>
            </ul>
          </li>
          <!-- feedback -->
          <!-- In manager-dashboard.ejs sidebar menu -->
          <li>
            <a href="/feedback/manager" class="nav-link">
              <i class="fas fa-comments"></i>
              Team Feedback
            </a>
          </li>
          <li>
            <a
              href="#reports"
              class="nav-link"
              onclick="switchTab(event, 'reports')"
            >
              <i class="fas fa-chart-bar"></i>
              Reports
            </a>
          </li>

          <li
            style="
              border-top: 1px solid rgba(255, 255, 255, 0.2);
              margin-top: 20px;
              padding-top: 20px;
            "
          >
            <a href="/manager/logout" class="nav-link">
              <i class="fas fa-sign-out-alt"></i>
              Logout
            </a>
          </li>
        </ul>
      </div>

      <!-- MAIN CONTENT -->
      <div class="main-content">
        <!-- TOPBAR -->
        <div class="topbar">
          <h1>Manager Dashboard</h1>
          <div class="user-info">
            <div class="user-avatar">
              <% if (user.userImage) { %>
              <img src="<%= user.userImage %>" alt="<%= user.name %>" />
              <% } else { %> <%= user.name.charAt(0).toUpperCase() %> <% } %>
            </div>
            <div class="user-details">
              <h4><%= user.name %></h4>
              <p><%= user.role.toUpperCase() %></p>
            </div>
          </div>
        </div>

        <!-- Flash Messages -->
        <% if (messages && messages.success) { %>
        <div
          class="alert alert-success alert-dismissible fade show"
          role="alert"
        >
          <%= messages.success %>
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="alert"
          ></button>
        </div>
        <% } %> <% if (messages && messages.error) { %>
        <div
          class="alert alert-danger alert-dismissible fade show"
          role="alert"
        >
          <%= messages.error %>
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="alert"
          ></button>
        </div>
        <% } %>
        <!-- DASHBOARD SECTION -->
        <div id="dashboard" class="content-section active">
          <div class="topbar" style="margin-bottom: 30px">
            <h2>Dashboard Overview</h2>
          </div>

          <!-- Stats Cards -->
          <div class="stats-container">
            <div class="stat-card">
              <div class="stat-card-icon bg-blue">
                <i class="fas fa-users"></i>
              </div>
              <p class="stat-card-title">Total Users</p>
              <p class="stat-card-number"><%= stats.totalUsers %></p>
            </div>

            <div class="stat-card">
              <div class="stat-card-icon bg-orange">
                <i class="fas fa-tools"></i>
              </div>
              <p class="stat-card-title">Total Technicians</p>
              <p class="stat-card-number"><%= stats.totalTechnicians %></p>
            </div>

            <div class="stat-card">
              <div class="stat-card-icon bg-warning">
                <i class="fas fa-clock"></i>
              </div>
              <p class="stat-card-title">Pending Approvals</p>
              <p class="stat-card-number"><%= stats.pendingApprovals || 0 %></p>
            </div>

            <div class="stat-card">
              <div class="stat-card-icon bg-info">
                <i class="fas fa-list"></i>
              </div>
              <p class="stat-card-title">Need Assignment</p>
              <p class="stat-card-number">
                <%= stats.pendingAssignments || 0 %>
              </p>
            </div>
          </div>

          <!-- Pending Bookings Section -->
          <div class="content-section" style="margin-top: 30px">
            <div class="section-header">
              <h2>Pending Bookings Requiring Approval</h2>
              <a href="/bookings/manager/bookings" class="btn-primary-custom">
                <i class="fas fa-list"></i> Manage All Bookings
              </a>
            </div>

            <% if (pendingBookings && pendingBookings.length > 0) { %>
            <div class="table-container">
              <table class="table">
                <thead>
                  <tr>
                    <th>Customer</th>
                    <th>Service Type</th>
                    <th>Technician</th>
                    <th>Problem</th>
                    <th>Preferred Date</th>
                    <th>Status</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% pendingBookings.forEach(booking => { %>
                  <tr>
                    <td>
                      <strong><%= booking.customerName %></strong><br />
                      <small class="text-muted"
                        ><%= booking.customerPhone %></small
                      ><br />
                      <small class="text-muted"
                        ><%= booking.customerEmail %></small
                      >
                    </td>
                    <td>
                      <strong><%= booking.serviceType.toUpperCase() %></strong>
                      <% if (booking.urgency === 'high') { %>
                      <span class="urgent-badge">URGENT</span>
                      <% } %>
                    </td>
                    <td>
                      <strong><%= booking.technicianName %></strong><br />
                      <small class="text-muted"
                        ><%= booking.technicianSpecialization %></small
                      >
                    </td>
                    <td>
                      <small><%= booking.problemDescription %></small>
                    </td>
                    <td>
                      <%= new Date(booking.preferredDate).toLocaleDateString()
                      %><br />
                      <small class="text-muted"
                        ><%= booking.preferredTime %></small
                      >
                    </td>
                    <td>
                      <span
                        class="badge badge-<%= booking.status === 'pending-manager-approval' ? 'warning' : 'info' %>"
                      >
                        <%= booking.status.replace(/-/g, ' ') %>
                      </span>
                    </td>
                    <td>
                      <div class="action-buttons">
                        <% if (booking.status === 'pending-manager-approval') {
                        %>
                        <form
                          action="/bookings/manager/bookings/approve/<%= booking._id %>"
                          method="POST"
                          style="display: inline"
                        >
                          <input type="hidden" name="action" value="approve" />
                          <button
                            type="submit"
                            class="btn-small btn-success"
                            onclick="return confirm('Approve this booking assignment?')"
                          >
                            <i class="fas fa-check-circle"></i> Approve
                          </button>
                        </form>
                        <form
                          action="/bookings/manager/bookings/approve/<%= booking._id %>"
                          method="POST"
                          style="display: inline"
                        >
                          <input type="hidden" name="action" value="reassign" />
                          <button
                            type="submit"
                            class="btn-small btn-warning"
                            onclick="return confirm('Reassign this booking to another technician?')"
                          >
                            <i class="fas fa-exchange-alt"></i> Reassign
                          </button>
                        </form>
                        <% } else if (booking.status ===
                        'pending-manager-assignment') { %>
                        <a
                          href="/bookings/manager/bookings"
                          class="btn-small btn-primary"
                        >
                          <i class="fas fa-user-plus"></i> Assign Tech
                        </a>
                        <% } %>
                        <a
                          href="/bookings/manager/bookings"
                          class="btn-small btn-primary"
                        >
                          <i class="fas fa-eye"></i> View Details
                        </a>
                      </div>
                    </td>
                  </tr>
                  <% }); %>
                </tbody>
              </table>
            </div>
            <% } else { %>
            <div class="alert alert-info">
              <i class="fas fa-info-circle"></i>
              No pending bookings requiring approval at the moment.
            </div>
            <% } %>
          </div>

          <!-- Recent Activity Section -->
          <div class="content-section" style="margin-top: 30px">
            <div class="section-header">
              <h2>Recent Activity</h2>
            </div>
            <div class="table-container">
              <table class="table">
                <thead>
                  <tr>
                    <th>Date</th>
                    <th>Activity</th>
                    <th>User</th>
                    <th>Details</th>
                  </tr>
                </thead>
                <tbody>
                  <% if (pendingBookings && pendingBookings.length > 0) { %> <%
                  pendingBookings.slice(0, 3).forEach(booking => { %>
                  <tr>
                    <td>
                      <%= new Date(booking.createdAt).toLocaleDateString() %>
                    </td>
                    <td>New Booking Created</td>
                    <td><%= booking.customerName %></td>
                    <td>
                      <%= booking.serviceType %> service -
                      <span
                        class="badge badge-<%= booking.status === 'pending-manager-approval' ? 'warning' : 'info' %>"
                      >
                        <%= booking.status.replace(/-/g, ' ') %>
                      </span>
                    </td>
                  </tr>
                  <% }); %> <% } else { %>
                  <tr>
                    <td colspan="4" style="text-align: center; color: #999">
                      No recent activity
                    </td>
                  </tr>
                  <% } %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
        <!-- USERS LIST SECTION -->
        <div id="users-list" class="content-section">
          <div class="section-header">
            <h2>All Users</h2>
            <button
              class="btn-primary-custom"
              onclick="switchTab(event, 'users-add')"
            >
              <i class="fas fa-user-plus"></i> Add New User
            </button>
          </div>

          <div class="table-container">
            <table class="table">
              <thead>
                <tr>
                  <th>ID</th>
                  <th>Name</th>
                  <th>Email</th>
                  <th>Phone</th>
                  <th>Status</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% if (users && users.length > 0) { %> <% users.forEach(user =>
                { %>
                <tr>
                  <td>#<%= user._id.toString().slice(-4) %></td>
                  <td><%= user.name %></td>
                  <td><%= user.email %></td>
                  <td><%= user.phone %></td>
                  <td>
                    <span class="badge-status badge-user">
                      <%= user.isActive ? 'Active' : 'Inactive' %>
                    </span>
                  </td>
                  <td>
                    <div class="action-buttons">
                      <button
                        class="btn-small btn-view"
                        onclick="viewUser('<%= user._id %>')"
                      >
                        <i class="fas fa-eye"></i> View
                      </button>
                      <button
                        class="btn-small btn-edit"
                        onclick="editUser('<%= user._id %>')"
                      >
                        <i class="fas fa-edit"></i> Edit
                      </button>
                      <button
                        class="btn-small btn-delete"
                        onclick="deleteUser('<%= user._id %>')"
                      >
                        <i class="fas fa-trash"></i> Delete
                      </button>
                    </div>
                  </td>
                </tr>
                <% }); %> <% } else { %>
                <tr>
                  <td colspan="6" style="text-align: center; color: #999">
                    No users found
                  </td>
                </tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
        <!-- TECHNICIANS LIST SECTION -->
        <div id="technicians-list" class="content-section">
          <div class="section-header">
            <h2>All Technicians</h2>
            <button
              class="btn-primary-custom"
              onclick="switchTab(event, 'technicians-add')"
            >
              <i class="fas fa-user-plus"></i> Add New Technician
            </button>
          </div>

          <div class="table-container">
            <table class="table">
              <thead>
                <tr>
                  <th>ID</th>
                  <th>Name</th>
                  <th>Email</th>
                  <th>Phone</th>
                  <th>Specialty</th>
                  <th>Status</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% if (technicians && technicians.length > 0) { %> <%
                technicians.forEach(technician => { %>
                <tr>
                  <td>#<%= technician._id.toString().slice(-4) %></td>
                  <td><%= technician.name %></td>
                  <td><%= technician.email %></td>
                  <td><%= technician.phone %></td>
                  <td><%= technician.specialty || 'General' %></td>
                  <td>
                    <span class="badge-status badge-technician">
                      <%= technician.isActive ? 'Active' : 'Inactive' %>
                    </span>
                  </td>
                  <td>
                    <div class="action-buttons">
                      <button class="btn-small btn-view">
                        <i class="fas fa-eye"></i> View
                      </button>
                      <button class="btn-small btn-edit">
                        <i class="fas fa-edit"></i> Edit
                      </button>
                      <button class="btn-small btn-delete">
                        <i class="fas fa-trash"></i> Delete
                      </button>
                    </div>
                  </td>
                </tr>
                <% }); %> <% } else { %>
                <tr>
                  <td colspan="7" style="text-align: center; color: #999">
                    No technicians found
                  </td>
                </tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
        <!-- Pending Bookings Section -->
        <div class="content-section" id="technicians-list">
          <div class="section-header">
            <h2>Pending Bookings Requiring Approval</h2>
            <a href="/bookings/manager/bookings" class="btn-primary-custom">
              <i class="fas fa-list"></i> Manage All Bookings
            </a>
          </div>

          <% if (pendingBookings && pendingBookings.length > 0) { %>
          <div class="table-container">
            <table class="table">
              <thead>
                <tr>
                  <th>Customer</th>
                  <th>Service Type</th>
                  <th>Technician</th>
                  <th>Preferred Date</th>
                  <th>Status</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% pendingBookings.forEach(booking => { %>
                <tr>
                  <td>
                    <strong><%= booking.customerName %></strong><br />
                    <small class="text-muted"
                      ><%= booking.customerPhone %></small
                    >
                  </td>
                  <td><%= booking.serviceType %></td>
                  <td>
                    <strong><%= booking.technicianName %></strong><br />
                    <small class="text-muted"
                      ><%= booking.technicianSpecialization %></small
                    >
                  </td>
                  <td>
                    <%= new Date(booking.preferredDate).toLocaleDateString()
                    %><br />
                    <small class="text-muted"
                      ><%= booking.preferredTime %></small
                    >
                  </td>
                  <td>
                    <span
                      class="badge badge-<%= booking.status === 'pending-manager-approval' ? 'warning' : 'info' %>"
                    >
                      <%= booking.status.replace(/-/g, ' ') %>
                    </span>
                  </td>
                  <td>
                    <div class="action-buttons">
                      <a
                        href="/bookings/manager/bookings"
                        class="btn-small btn-primary"
                      >
                        <i class="fas fa-check-circle"></i> Review
                      </a>
                    </div>
                  </td>
                </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
          <% } else { %>
          <div class="alert alert-info">
            <i class="fas fa-info-circle"></i>
            No pending bookings requiring approval at the moment.
          </div>
          <% } %>
        </div>
      </div>
    </div>
    <script src="/js/manager-dashboard.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
