<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
     <link href="/css/home.css" rel="stylesheet" />
    <style>
        .booking-card {
            border-radius: 10px;
            margin-bottom: 20px;
            border-left: 4px solid #007bff;
        }
        .status-pending-manager-assignment { border-left-color: #17a2b8; }
        .status-assigned { border-left-color: #28a745; }
        .status-in-progress { border-left-color: #007bff; }
        .status-completed { border-left-color: #6c757d; }
        .status-cancelled { border-left-color: #dc3545; }
    </style>
</head>
<body>
    <%- include('../layouts/navbar') %> 

    <div class="container mt-4">
        <!-- Flash Messages -->
        <% if (messages.success) { %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <%= messages.success %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        <% } %>
        <% if (messages.error) { %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <%= messages.error %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        <% } %>

        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>Manage Bookings & Assignments</h2>
            <div class="btn-group">
                <a href="/bookings/manager/bookings?status=all" class="btn btn-outline-secondary <%= selectedStatus === 'all' ? 'active' : '' %>">All Bookings</a>
                <a href="/bookings/manager/bookings?status=pending-manager-assignment" class="btn btn-outline-info <%= selectedStatus === 'pending-manager-assignment' ? 'active' : '' %>">Need Assignment</a>
                <a href="/bookings/manager/bookings?status=assigned" class="btn btn-outline-success <%= selectedStatus === 'assigned' ? 'active' : '' %>">Assigned</a>
                <a href="/bookings/manager/bookings?status=in-progress" class="btn btn-outline-primary <%= selectedStatus === 'in-progress' ? 'active' : '' %>">In Progress</a>
                <a href="/bookings/manager/bookings?status=completed" class="btn btn-outline-secondary <%= selectedStatus === 'completed' ? 'active' : '' %>">Completed</a>
            </div>
            <a href="/manager/dashboard" class="btn btn-primary">
                ‚Üê Back to Dashboard
            </a>
        </div>

        <!-- Statistics Cards -->
        <div class="row mb-4">
            <div class="col-md-3">
                <div class="card text-white bg-info">
                    <div class="card-body">
                        <h5 class="card-title">Need Assignment</h5>
                        <%
                            const needAssignmentCount = bookings.filter(b => b.status === 'pending-manager-assignment').length;
                        %>
                        <h2><%= needAssignmentCount %></h2>
                        <p class="card-text">Require technician assignment</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-white bg-success">
                    <div class="card-body">
                        <h5 class="card-title">Assigned</h5>
                        <%
                            const assignedCount = bookings.filter(b => b.status === 'assigned').length;
                        %>
                        <h2><%= assignedCount %></h2>
                        <p class="card-text">Ready for work</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-white bg-primary">
                    <div class="card-body">
                        <h5 class="card-title">In Progress</h5>
                        <%
                            const inProgressCount = bookings.filter(b => b.status === 'in-progress').length;
                        %>
                        <h2><%= inProgressCount %></h2>
                        <p class="card-text">Currently being worked on</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-white bg-secondary">
                    <div class="card-body">
                        <h5 class="card-title">Total Active</h5>
                        <h2><%= bookings.length %></h2>
                        <p class="card-text">All bookings</p>
                    </div>
                </div>
            </div>
        </div>

        <% if (bookings.length === 0) { %>
            <div class="text-center py-5">
                <h4>No bookings found</h4>
                <p>There are no bookings matching your criteria.</p>
                <a href="/bookings/manager/bookings?status=all" class="btn btn-primary">View All Bookings</a>
            </div>
        <% } else { %>
            <div class="row">
                <% bookings.forEach(booking => { %>
                <div class="col-md-6 mb-4">
                    <div class="card booking-card status-<%= booking.status %>">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <h5 class="card-title">
                                    <%= booking.serviceType.toUpperCase() %> Service
                                </h5>
                                <span class="badge bg-<%= 
                                    booking.status === 'pending-manager-assignment' ? 'info' : 
                                    booking.status === 'assigned' ? 'success' : 
                                    booking.status === 'in-progress' ? 'primary' : 
                                    booking.status === 'completed' ? 'secondary' : 
                                    booking.status === 'cancelled' ? 'danger' : 'warning'
                                %>">
                                    <%= booking.status.replace(/-/g, ' ') %>
                                </span>
                            </div>
                            
                            <!-- Customer Info -->
                            <div class="mb-3">
                                <h6>üë§ Customer Details:</h6>
                                <p class="mb-1"><strong>Name:</strong> <%= booking.customerName %></p>
                                <p class="mb-1"><strong>Phone:</strong> <%= booking.customerPhone %></p>
                                <p class="mb-1"><strong>Email:</strong> <%= booking.customerEmail %></p>
                                <p class="mb-0"><strong>Address:</strong> <%= booking.serviceAddress %></p>
                            </div>

                            <!-- Problem Description -->
                            <div class="mb-3">
                                <h6>üîß Problem Description:</h6>
                                <p class="mb-0"><%= booking.problemDescription %></p>
                            </div>

                            <!-- Service Details -->
                            <div class="row mb-3">
                                <div class="col-6">
                                    <small><strong>üìÖ Date:</strong> <%= new Date(booking.preferredDate).toLocaleDateString() %></small>
                                </div>
                                <div class="col-6">
                                    <small><strong>‚è∞ Time:</strong> <%= booking.preferredTime %></small>
                                </div>
                                <div class="col-12 mt-1">
                                    <small><strong>üö® Urgency:</strong> 
                                        <span class="badge bg-<%= 
                                            booking.urgency === 'high' ? 'danger' : 
                                            booking.urgency === 'medium' ? 'warning' : 'secondary'
                                        %>"><%= booking.urgency %></span>
                                    </small>
                                </div>
                            </div>

                            <!-- Technician Info (if assigned) -->
                            <% if (booking.technicianName) { %>
                                <div class="mb-3">
                                    <h6>üë®‚Äçüîß Assigned Technician:</h6>
                                    <p class="mb-1"><strong>Name:</strong> <%= booking.technicianName %></p>
                                    <p class="mb-1"><strong>Specialization:</strong> <%= booking.technicianSpecialization %></p>
                                    <% if (booking.technicianDetails) { %>
                                        <p class="mb-0">
                                            <strong>Status:</strong> 
                                            <span class="badge bg-<%= 
                                                booking.technicianDetails.availability === 'available' ? 'success' : 
                                                booking.technicianDetails.availability === 'busy' ? 'danger' : 'warning'
                                            %>">
                                                <%= booking.technicianDetails.availability %>
                                            </span>
                                            <strong>Workload:</strong> 
                                            <span class="badge bg-<%= 
                                                booking.technicianDetails.currentWorkload >= booking.technicianDetails.maxWorkload ? 'danger' :
                                                booking.technicianDetails.currentWorkload >= booking.technicianDetails.maxWorkload * 0.8 ? 'warning' : 'success'
                                            %>">
                                                <%= booking.technicianDetails.currentWorkload %>/<%= booking.technicianDetails.maxWorkload %>
                                            </span>
                                        </p>
                                    <% } %>
                                </div>
                            <% } %>

                            <!-- Manager Actions -->
                            <% if (booking.status === 'pending-manager-assignment') { %>
                                <div class="border-top pt-3 mt-3">
                                    <h6>üë®‚Äçüîß Assign Technician:</h6>
                                    <form action="/bookings/manager/bookings/assign/<%= booking._id %>" method="POST">
                                        <div class="input-group">
                                            <select name="technicianId" class="form-select" required>
                                                <option value="">Select Available Technician</option>
                                                <% technicians.forEach(tech => { %>
                                                    <option value="<%= tech.userDetails._id %>" 
                                                        <%= tech.availability !== 'available' ? 'disabled' : '' %>
                                                        <%= tech.currentWorkload >= tech.maxWorkload ? 'disabled' : '' %>>
                                                        <%= tech.userDetails.name %> - <%= tech.specialization %>
                                                        <% if (tech.availability === 'available' && tech.currentWorkload < tech.maxWorkload) { %>
                                                            ‚úÖ (Available - <%= tech.currentWorkload %>/<%= tech.maxWorkload %> jobs)
                                                        <% } else if (tech.availability !== 'available') { %>
                                                            ‚ùå (<%= tech.availability %>)
                                                        <% } else { %>
                                                            üö´ (Full - <%= tech.currentWorkload %>/<%= tech.maxWorkload %> jobs)
                                                        <% } %>
                                                    </option>
                                                <% }); %>
                                            </select>
                                            <button type="submit" class="btn btn-primary">Assign</button>
                                        </div>
                                    </form>
                                </div>
                            <% } %>

                            <!-- Work Status Actions -->
                            <% if (booking.status === 'assigned' || booking.status === 'in-progress') { %>
                                <div class="border-top pt-3 mt-3">
                                    <h6>üîÑ Work Status:</h6>
                                    <div class="btn-group w-100">
                                        <% if (booking.status === 'assigned') { %>
                                            <form action="/bookings/manager/bookings/status/<%= booking._id %>" method="POST" class="d-inline w-50">
                                                <input type="hidden" name="status" value="in-progress">
                                                <button type="submit" class="btn btn-primary btn-sm w-100">
                                                    üõ†Ô∏è Start Work
                                                </button>
                                            </form>
                                        <% } %>
                                        <% if (booking.status === 'in-progress') { %>
                                            <form action="/bookings/manager/bookings/status/<%= booking._id %>" method="POST" class="d-inline w-50">
                                                <input type="hidden" name="status" value="completed">
                                                <button type="submit" class="btn btn-success btn-sm w-100">
                                                    ‚úÖ Complete
                                                </button>
                                            </form>
                                        <% } %>
                                        <form action="/bookings/manager/bookings/status/<%= booking._id %>" method="POST" class="d-inline w-50">
                                            <input type="hidden" name="status" value="cancelled">
                                            <button type="submit" class="btn btn-danger btn-sm w-100" 
                                                    onclick="return confirm('Are you sure you want to cancel this booking?')">
                                                ‚ùå Cancel
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            <% } %>

                            <!-- Assignment History -->
                            <div class="mt-3 pt-3 border-top">
                                <small class="text-muted">
                                    <strong>üìã Created:</strong> <%= new Date(booking.createdAt).toLocaleDateString() %>
                                    at <%= new Date(booking.createdAt).toLocaleTimeString() %>
                                </small>
                                <% if (booking.assignedDate) { %>
                                    <br><small class="text-muted">
                                        <strong>üë§ Assigned:</strong> <%= new Date(booking.assignedDate).toLocaleDateString() %>
                                        by <%= booking.assignedByName || 'System' %>
                                    </small>
                                <% } %>
                                <% if (booking.workStartedAt) { %>
                                    <br><small class="text-muted">
                                        <strong>üõ†Ô∏è Work Started:</strong> <%= new Date(booking.workStartedAt).toLocaleDateString() %>
                                    </small>
                                <% } %>
                                <% if (booking.workCompletedAt) { %>
                                    <br><small class="text-muted">
                                        <strong>‚úÖ Completed:</strong> <%= new Date(booking.workCompletedAt).toLocaleDateString() %>
                                    </small>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>
                <% }); %>
            </div>
        <% } %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Auto-dismiss flash messages after 5 seconds
        setTimeout(() => {
            const alerts = document.querySelectorAll('.alert');
            alerts.forEach(alert => {
                const bsAlert = new bootstrap.Alert(alert);
                bsAlert.close();
            });
        }, 5000);

        // Confirm before reassigning
        document.addEventListener('submit', function(e) {
            if (e.target.method === 'POST' && e.target.action.includes('/assign/')) {
                const technicianSelect = e.target.querySelector('select[name="technicianId"]');
                if (!technicianSelect.value) {
                    e.preventDefault();
                    alert('Please select a technician');
                    return false;
                }
                if (!confirm('Are you sure you want to assign this booking to the selected technician?')) {
                    e.preventDefault();
                    return false;
                }
            }
        });
    </script>
</body>
</html>