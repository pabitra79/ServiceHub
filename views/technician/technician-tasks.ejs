<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .task-card {
            border-radius: 10px;
            margin-bottom: 20px;
            border-left: 4px solid #007bff;
        }
        .status-assigned { border-left-color: #17a2b8; }
        .status-in-progress { border-left-color: #007bff; }
        .status-completed { border-left-color: #28a745; }
    </style>
 
    <link href="/css/navbar.css" rel="stylesheet" />
    <link href="/css/home.css" rel="stylesheet" />
</head>
<body>
    <%- include('../layouts/navbar') %>

    <div class="container mt-4">
        <!-- Flash Messages -->
        <% if (messages.success) { %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <%= messages.success %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        <% } %>
        <% if (messages.error) { %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <%= messages.error %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        <% } %>

        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>My Tasks</h2>
            <a href="/technician/dashboard" class="btn btn-outline-secondary">Back to Dashboard</a>
        </div>

        <% if (tasks.length === 0) { %>
            <div class="text-center py-5">
                <h4>No tasks assigned</h4>
                <p>You don't have any assigned tasks at the moment.</p>
            </div>
        <% } else { %>
            <div class="row">
                <% tasks.forEach(task => { %>
                <div class="col-md-6 mb-4">
                    <div class="card task-card status-<%= task.status %>">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <h5 class="card-title"><%= task.serviceType.toUpperCase() %> Service</h5>
                                <span class="badge bg-<%= 
                                    task.status === 'assigned' ? 'info' :
                                    task.status === 'in-progress' ? 'primary' : 'success'
                                %>"><%= task.status %></span>
                            </div>
                            
                            <!-- Customer Info -->
                            <div class="mb-3">
                                <h6>Customer Details:</h6>
                                <p class="mb-1"><strong>Name:</strong> <%= task.customerName %></p>
                                <p class="mb-1"><strong>Phone:</strong> <%= task.customerPhone %></p>
                                <p class="mb-1"><strong>Email:</strong> <%= task.customerEmail %></p>
                                <p class="mb-0"><strong>Address:</strong> <%= task.serviceAddress %></p>
                            </div>

                            <!-- Problem Description -->
                            <div class="mb-3">
                                <h6>Problem Description:</h6>
                                <p class="mb-0"><%= task.problemDescription %></p>
                            </div>

                            <!-- Service Details -->
                            <div class="row mb-3">
                                <div class="col-6">
                                    <small><strong>Preferred Date:</strong> <%= new Date(task.preferredDate).toLocaleDateString() %></small>
                                </div>
                                <div class="col-6">
                                    <small><strong>Time:</strong> <%= task.preferredTime %></small>
                                </div>
                                <div class="col-12 mt-1">
                                    <small><strong>Urgency:</strong> 
                                        <span class="badge bg-<%= 
                                            task.urgency === 'high' ? 'danger' : 
                                            task.urgency === 'medium' ? 'warning' : 'secondary'
                                        %>"><%= task.urgency %></span>
                                    </small>
                                </div>
                            </div>

                            <!-- Status Update Form -->
                            <form action="/bookings/technician/tasks/update-status/<%= task._id %>" method="POST" class="mt-3">
                                <div class="mb-2">
                                    <label class="form-label"><strong>Update Status:</strong></label>
                                    <select name="status" class="form-select" required>
                                        <option value="assigned" <%= task.status === 'assigned' ? 'selected' : '' %>>Assigned</option>
                                        <option value="in-progress" <%= task.status === 'in-progress' ? 'selected' : '' %>>In Progress</option>
                                        <option value="completed" <%= task.status === 'completed' ? 'selected' : '' %>>Completed</option>
                                    </select>
                                </div>
                                <button type="submit" class="btn btn-primary btn-sm">Update Status</button>
                            </form>

                            <!-- Timeline -->
                            <div class="mt-3">
                                <small class="text-muted">
                                    <strong>Assigned:</strong> <%= new Date(task.assignedDate).toLocaleDateString() %>
                                </small>
                                <% if (task.workStartedAt) { %>
                                    <br><small class="text-muted">
                                        <strong>Work Started:</strong> <%= new Date(task.workStartedAt).toLocaleDateString() %>
                                    </small>
                                <% } %>
                                <% if (task.workCompletedAt) { %>
                                    <br><small class="text-muted">
                                        <strong>Completed:</strong> <%= new Date(task.workCompletedAt).toLocaleDateString() %>
                                    </small>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>
                <% }); %>
            </div>
        <% } %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>