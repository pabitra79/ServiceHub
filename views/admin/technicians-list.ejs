<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/admin-dashboard.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />
  </head>
  <body>
    <div class="admin-container">
      <div id="technicians-list" class="content-section">
        <div class="section-header">
          <h2>All Technicians</h2>
          <button
            class="btn-primary-custom"
            onclick="switchTab(event, 'technicians-add')"
          >
            <i class="fas fa-user-plus"></i> Add New Technician
          </button>
        </div>

        <div class="table-container">
          <table class="table">
            <thead>
              <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Specialization</th>
                <th>Experience</th>
                <th>Status</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% if (technicians && technicians.length > 0) { %> <%
              technicians.forEach(function(technician) { %>
              <tr>
                <td>#<%= technician._id.toString().slice(-4) %></td>
                <td>
                  <%= technician.userData ? technician.userData.name : 'user not
                  found' %>
                </td>
                <td>
                  <%= technician.userData ? technician.userData.email : 'N/A' %>
                </td>
                <td>
                  <%= technician.userData ? technician.userData.phone : 'N/A' %>
                </td>
                <td><%= technician.specialization %></td>
                <td><%= technician.experience %> years</td>
                <td>
                  <span
                    class="badge-status <%= technician.isActive ? 'badge-technician' : 'badge-inactive' %>"
                  >
                    <%= technician.isActive ? 'Active' : 'Inactive' %>
                  </span>
                </td>
                <td>
                  <div class="action-buttons">
                    <button
                      class="btn-small btn-view"
                      onclick="viewTechnician('<%= technician._id %>')"
                    >
                      <i class="fas fa-eye"></i> View
                    </button>
                    <button
                      class="btn-small btn-edit"
                      onclick="editTechnician('<%= technician._id %>')"
                    >
                      <i class="fas fa-edit"></i> Edit
                    </button>
                    <button
                      class="btn-small btn-delete"
                      onclick="deleteTechnician('<%= technician._id %>')"
                    >
                      <i class="fas fa-trash"></i> Delete
                    </button>
                  </div>
                </td>
              </tr>
              <% }) %> <% } else { %>
              <tr>
                <td colspan="8" style="text-align: center; color: #999">
                  No technicians found
                </td>
              </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
      <script>
        function viewTechnician(id) {
          window.location.href = "/admin/technicians/" + id + "/details";
        }

        function editTechnician(id) {
          window.location.href = "/admin/technicians/" + id + "/edit";
        }

        function deleteTechnician(id) {
          if (confirm("Are you sure you want to delete this technician?")) {
            window.location.href = "/admin/technicians/" + id + "/delete";
          }
        }
      </script>
    </div>
  </body>
</html>
