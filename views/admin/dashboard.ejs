<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
      rel="stylesheet"
    />
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link href="/css/admin-dashboard.css" rel="stylesheet" />
    <link href="/css/add-technician.css" rel="stylesheet" />
  </head>
  <body>
    <div class="dashboard-container">
      <!-- SIDEBAR -->
      <div class="sidebar">
        <div class="sidebar-brand">
          <i class="fas fa-cogs"></i>
          <h3>ServiceHub</h3>
        </div>

        <ul class="sidebar-menu">
          <li>
            <a
              href="/admin/dashboard"
              class="nav-link active"
              onclick="switchTab(event, 'dashboard')"
            >
              <i class="fas fa-home"></i>
              Dashboard
            </a>
          </li>
          <!-- manage the user -->
          <li>
            <a href="#" class="nav-link" onclick="toggleSubmenu(event)">
              <i class="fas fa-users"></i>
              Manage Users
              <i class="fas fa-chevron-down" style="margin-left: auto"></i>
            </a>
            <ul class="submenu">
              <li>
                <a href="users-list" onclick="switchTab(event, 'users-list')">
                  <i class="fas fa-list"></i> All Users
                </a>
              </li>
              <li>
                <a href="users-add" onclick="switchTab(event, 'users-add')">
                  <i class="fas fa-user-plus"></i> Add User
                </a>
              </li>
            </ul>
          </li>
          <!-- manage the technician -->
          <li>
            <a href="#" class="nav-link" onclick="toggleSubmenu(event)">
              <i class="fas fa-tools"></i>
              Manage Technicians
              <i class="fas fa-chevron-down" style="margin-left: auto"></i>
            </a>
            <ul class="submenu">
              <li>
                <a
                  href="technicians-list"
                  onclick="switchTab(event, 'technicians-list')"
                >
                  <i class="fas fa-list"></i> All Technicians
                </a>
              </li>
              <li>
                <a
                  href="technicians-add"
                  onclick="switchTab(event, 'technicians-add')"
                >
                  <i class="fas fa-user-plus"></i> Add Technician
                </a>
              </li>
            </ul>
          </li>

          <li>
            <a href="#" class="nav-link" onclick="toggleSubmenu(event)">
              <i class="fas fa-user-tie"></i>
              Manage Managers
              <i class="fas fa-chevron-down" style="margin-left: auto"></i>
            </a>
            <ul class="submenu">
              <li>
                <a
                  href="managers-list"
                  onclick="switchTab(event, 'managers-list')"
                >
                  <i class="fas fa-list"></i> All Managers
                </a>
              </li>
              <li>
                <a
                  href="#managers-add"
                  onclick="switchTab(event, 'managers-add')"
                >
                  <i class="fas fa-user-plus"></i> Add Manager
                </a>
              </li>
            </ul>
          </li>
<!-- its feedback -->
          <li>
  <a href="/feedback/admin" class="nav-link">
    <i class="fas fa-comments"></i>
    Customer Feedback
  </a>
</li>

          <li>
            <a
              href="#reports"
              class="nav-link"
              onclick="switchTab(event, 'reports')"
            >
              <i class="fas fa-chart-bar"></i>
              Reports
            </a>
          </li>

          <li>
            <a
              href="#settings"
              class="nav-link"
              onclick="switchTab(event, 'settings')"
            >
              <i class="fas fa-cog"></i>
              Settings
            </a>
          </li>

          <li
            style="
              border-top: 1px solid rgba(255, 255, 255, 0.2);
              margin-top: 20px;
              padding-top: 20px;
            "
          >
            <a href="/logout" class="nav-link">
              <i class="fas fa-sign-out-alt"></i>
              Logout
            </a>
          </li>
        </ul>
      </div>

      <!-- MAIN CONTENT -->
      <div class="main-content">
        <!-- TOPBAR -->
        <div class="topbar">
          <h1> Admin Dashboard</h1>
          <div class="user-info">
            <div class="user-avatar">
              <% if (user.userImage) { %>
              <img src="<%= user.userImage %>" alt="<%= user.name %>" />
              <% } else { %> <%= user.name.charAt(0).toUpperCase() %> <% } %>
            </div>
            <div class="user-details">
              <h4><%= user.name %></h4>
              <p><%= user.role.toUpperCase() %></p>
            </div>
          </div>
        </div>

  <!-- DASHBOARD SECTION main carefull-->
          <div class="stats-container">
            <div class="stat-card">
              <div class="stat-card-icon bg-blue">
                <i class="fas fa-users"></i>
              </div>
              <p class="stat-card-title">Total Users</p>
              <p class="stat-card-number"><%= stats.totalUsers %></p>
            </div>

            <div class="stat-card">
              <div class="stat-card-icon bg-orange">
                <i class="fas fa-tools"></i>
              </div>
              <p class="stat-card-title">Total Technicians</p>
              <p class="stat-card-number"><%= stats.totalTechnicians %></p>
            </div>

            <div class="stat-card">
              <div class="stat-card-icon bg-green">
                <i class="fas fa-user-tie"></i>
              </div>
              <p class="stat-card-title">Total Managers</p>
              <p class="stat-card-number"><%= stats.totalManagers %></p>
            </div>

            <div class="stat-card">
              <div class="stat-card-icon bg-purple">
                <i class="fas fa-user-shield"></i>
              </div>
              <p class="stat-card-title">Total Admins</p>
              <p class="stat-card-number"><%= stats.totalAdmins %></p>
            </div>
          </div>
        </div>

        <!-- USERS LIST SECTION -->
          <div id="users-list" class="content-section">
          <div class="section-header">
            <h2>All Users</h2>
            <button
              class="btn-primary-custom"
              onclick="switchTab(event, 'users-add')"
            >
              <!-- <i class="fas fa-user-plus"></i> Add New User -->
            </button>
          </div>

          <div class="table-container">
            <table class="table">
              <thead>
                <tr>
                  <th>ID</th>
                  <th>Name</th>
                  <th>Email</th>
                  <th>Phone</th>
                  <th>Status</th>
                  <th>Actions</th>
                </tr>
              </thead>
            <tbody>
  <% if (users && users.length > 0) { %> 
    <% users.forEach(user => { %>
    <tr>
      <td>#<%= user._id.toString().slice(-4) %></td>
      <td><%= user.name %></td>
      <td><%= user.email %></td>
      <td><%= user.phone %></td>
      <td>
        <span class="badge-status badge-user">
          <%= user.isActive ? 'Active' : 'Inactive' %>
        </span>
      </td>
      <td>
        <div class="action-buttons">
          <button class="btn-small btn-view" onclick="viewUser('<%= user._id %>')">
            <i class="fas fa-eye"></i> View
          </button>
          <button class="btn-small btn-edit" onclick="editUser('<%= user._id %>')">
            <i class="fas fa-edit"></i> Edit
          </button>
          <button class="btn-small btn-delete" onclick="deleteUser('<%= user._id %>')">
            <i class="fas fa-trash"></i> Delete
          </button>
        </div>
      </td>
    </tr>
    <% }); %> 
  <% } else { %>
    <tr>
      <td colspan="6" style="text-align: center; color: #999">
        No users found
      </td>
    </tr>
  <% } %>
</tbody>
            </table>
          </div>
        </div>

        <!-- ADD USER SECTION -->
        <div id="users-add" class="content-section">
          <div class="section-header">
            <h2>Add New User</h2>
          </div>

          <div class="form-container">
            <form>
              <div class="form-group">
                <label>Full Name</label>
                <input type="text" placeholder="Enter full name" required />
              </div>

              <div class="form-group">
                <label>Email Address</label>
                <input
                  type="email"
                  placeholder="Enter email address"
                  required
                />
              </div>

              <div class="form-group">
                <label>Phone Number</label>
                <input type="tel" placeholder="Enter phone number" required />
              </div>

              <div class="form-group">
                <label>Password</label>
                <input type="password" placeholder="Enter password" required />
              </div>

              <div class="form-group">
                <label>Confirm Password</label>
                <input
                  type="password"
                  placeholder="Confirm password"
                  required
                />
              </div>

              <button type="submit" class="btn-submit">
                Create User Account
              </button>
            </form>
          </div>
        </div>

<!-- TECHNICIAN LIST SECTION -->
<div id="technicians-list" class="content-section">
  <div class="section-header">
    <h2>All Technicians</h2>
    <button class="btn-primary-custom" onclick="switchTab(event, 'technicians-add')">
      <i class="fas fa-user-plus"></i> Add New Technician
    </button>
  </div>

  <div class="table-container">
    <table class="table">
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Email</th>
          <th>Phone</th>
          <th>Specialization</th>
          <th>Experience</th>
          <th>Status</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% if (technicians && technicians.length > 0) { %> 
          <% technicians.forEach(technician => { %>
          <tr>
            <td>#<%= technician._id.toString().slice(-4) %></td>
            <td>
              <%= technician.userData ? technician.userData.name : 'User not found' %>
            </td>
            <td>
              <%= technician.userData ? technician.userData.email : 'N/A' %>
            </td>
            <td>
              <%= technician.userData ? technician.userData.phone : 'N/A' %>
            </td>
            <td><%= technician.specialization %></td>
            <td><%= technician.experience %> years</td>
            <td>
              <span class="badge-status <%= technician.isActive ? 'badge-technician' : 'badge-inactive' %>">
                <%= technician.isActive ? 'Active' : 'Inactive' %>
              </span>
            </td>
            <td>
              <div class="action-buttons">
                <button class="btn-small btn-view" onclick="viewTechnician('<%= technician._id %>')">
                  <i class="fas fa-eye"></i> View
                </button>
                <button class="btn-small btn-edit" onclick="editTechnician('<%= technician._id %>')">
                  <i class="fas fa-edit"></i> Edit
                </button>
                <button class="btn-small btn-delete" onclick="deleteTechnician('<%= technician._id %>')">
                  <i class="fas fa-trash"></i> Delete
                </button>
              </div>
            </td>
          </tr>
          <% }); %> 
        <% } else { %>
        <tr>
          <td colspan="8" style="text-align: center; color: #999">
            No technicians found
          </td>
        </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</div>

<!-- TECHNICIAN add SECTION -->
  <div>
    <%- include('add-technician.ejs') %>
  </div>

<!-- MANAGERS LIST SECTION -->
<div id="managers-list" class="content-section">
  <div class="section-header">
    <h2>All Managers</h2>
    <button class="btn-primary-custom" onclick="switchTab(event, 'managers-add')">
      <i class="fas fa-user-plus"></i> Add New Manager
    </button>
  </div>

  <div class="table-container">
    <table class="table">
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Email</th>
          <th>Phone</th>
          <th>Department</th>
          <th>Status</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% if (managers && managers.length > 0) { %> 
          <% managers.forEach(manager => { %>
          <tr>
            <td>#<%= manager._id.toString().slice(-4) %></td>
            <td>
              <%= manager.userData ? manager.userData.name : 'User not found' %>
            </td>
            <td>
              <%= manager.userData ? manager.userData.email : 'N/A' %>
            </td>
            <td>
              <%= manager.userData ? manager.userData.phone : 'N/A' %>
            </td>
            <td><%= manager.department %></td>
            <td>
              <span class="badge-status <%= manager.isActive ? 'badge-manager' : 'badge-inactive' %>">
                <%= manager.isActive ? 'Active' : 'Inactive' %>
              </span>
            </td>
            <td>
              <div class="action-buttons">
                <button class="btn-small btn-view" onclick="viewManager('<%= manager._id %>')">
                  <i class="fas fa-eye"></i> View
                </button>
                <button class="btn-small btn-edit" onclick="editManager('<%= manager._id %>')">
                  <i class="fas fa-edit"></i> Edit
                </button>
                <button class="btn-small btn-delete" onclick="deleteManager('<%= manager._id %>')">
                  <i class="fas fa-trash"></i> Delete
                </button>
              </div>
            </td>
          </tr>
          <% }); %> 
        <% } else { %>
        <tr>
          <td colspan="7" style="text-align: center; color: #999">
            No managers found
          </td>
        </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</div>
        <!-- add maanger  -->
        <div id="managers-add" class="content-section">
          <div class="section-header">
          <a href=/manager/add-manager">Add New Manager</a>
          </div> 
          <div class="form-container">
            <form id="managerForm" action="/admin/create-manager" enctype="multipart/form-data" method="POST">
              <%- include('../manager/add-manager.ejs') %>
            </form>
          </div>
        </div>

        <!-- REPORTS SECTION -->
        <div id="reports" class="content-section">
          <div class="section-header">
            <h2>Reports</h2>
          </div>

          <div class="stats-container">
            <div class="stat-card">
              <div class="stat-card-icon bg-blue">
                <i class="fas fa-chart-line"></i>
              </div>
              <p class="stat-card-title">Active Services</p>
              <p class="stat-card-number">47</p>
            </div>

            <div class="stat-card">
              <div class="stat-card-icon bg-green">
                <i class="fas fa-check-circle"></i>
              </div>
              <p class="stat-card-title">Completed Services</p>
              <p class="stat-card-number">156</p>
            </div>

            <div class="stat-card">
              <div class="stat-card-icon bg-orange">
                <i class="fas fa-clock"></i>
              </div>
              <p class="stat-card-title">Pending Services</p>
              <p class="stat-card-number">23</p>
            </div>

            <div class="stat-card">
              <div class="stat-card-icon bg-purple">
                <i class="fas fa-star"></i>
              </div>
              <p class="stat-card-title">Average Rating</p>
              <p class="stat-card-number">4.8</p>
            </div>
          </div>
        </div>

        <!-- SETTINGS SECTION -->
        <div id="settings" class="content-section">
          <div class="section-header">
            <h2>Settings</h2>
          </div>

          <div class="form-container">
            <h3 style="margin-bottom: 25px; color: #333">System Settings</h3>

            <div class="form-group">
              <label>Company Name</label>
              <input type="text" value="ServiceHub" />
            </div>

            <div class="form-group">
              <label>Company Email</label>
              <input type="email" value="info@servicehub.com" />
            </div>

            <div class="form-group">
              <label>Company Phone</label>
              <input type="tel" value="+1 234 567 8900" />
            </div>

            <div class="form-group">
              <label>Company Address</label>
              <textarea rows="3">123 Main Street, City, State 12345</textarea>
            </div>

            <div class="form-group">
              <label>Session Timeout (minutes)</label>
              <input type="number" value="60" />
            </div>

            <div class="form-group">
              <label>Enable Email Notifications</label>
              <input type="checkbox" checked style="width: auto" />
            </div>

            <button type="submit" class="btn-submit">Save Settings</button>
          </div>
        </div>
      </div>
    </div>
    <script src="/js/admin-dashboard.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
