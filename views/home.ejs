    <!-- Hero Section with Background Image -->
    <section class="hero">
      <div class="hero-content">
        <h1>Professional Appliance Repair Services</h1>
        <p>
          Quick, reliable, and affordable repairs for your electrical, plumbing,
          and appliance needs. Book your service today!
        </p>
        <div class="hero-buttons">
