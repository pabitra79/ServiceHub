        <h2 class="section-title">Meet Our Expert Technicians</h2>
        <p class="section-subtitle">
          Professional technicians ready to fix your appliances
        </p>

        <div class="technicians-preview-grid">
          <!-- This will show 3 featured technicians -->
          <% if (featuredTechnicians && featuredTechnicians.length > 0) { %> <%
          featuredTechnicians.forEach(technician => { %>
          <div class="technician-preview-card">
            <img
              src="<%= technician.userData.userImage || '/images/default-avatar.png' %>"
              alt="<%= technician.userData.name %>"
              class="technician-preview-avatar"
            />
            <h4><%= technician.userData.name %></h4>
            <p class="technician-preview-specialty">
              <%= technician.specialization %> Expert
            </p>
            <p class="technician-preview-exp">
              <%= technician.experience %> years experience
            </p>
            <button
              class="btn-view-profile"
              onclick="viewTechnicianProfile('<%= technician._id %>')"
            >
              View Profile
            </button>
          </div>
          <% }); %> <% } else { %>
          <div class="no-technicians">
            <p>Our technicians are ready to serve you!</p>
          </div>
          <% } %>
        </div>

