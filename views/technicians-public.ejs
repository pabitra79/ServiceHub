<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Our Technicians - ServiceHub</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      .technician-card {
        border: 1px solid #ddd;
        border-radius: 10px;
        padding: 20px;
        margin-bottom: 20px;
        transition: all 0.3s ease;
      }
      .technician-card:hover {
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        transform: translateY(-5px);
      }
      .availability-badge {
        font-size: 0.8em;
        padding: 0.4em 0.8em;
      }
    </style>
    <link href="/css/home.css" rel="stylesheet" />
  </head>
  <body>
    <%- include('layouts/navbar') %>

    <div class="container mt-4">
      <h1 class="text-center mb-4">Our Expert Technicians</h1>

      <!-- Flash Messages -->
      <% if (messages && messages.success) { %>
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        <%= messages.success %>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="alert"
        ></button>
      </div>
      <% } %> <% if (messages && messages.error) { %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <%= messages.error %>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="alert"
        ></button>
      </div>
      <% } %>

      <!-- Availability Legend -->
      <div class="row mb-4">
        <div class="col-12">
          <div class="card">
            <div class="card-body py-2">
              <div class="d-flex justify-content-center flex-wrap gap-3">
                <span class="badge bg-success availability-badge"
                  >âœ… Available</span
                >
                <span class="badge bg-danger availability-badge">ğŸš« Busy</span>
                <span class="badge bg-warning availability-badge"
                  >ğŸï¸ On Leave</span
                >
                <span class="badge bg-info availability-badge"
                  >ğŸ“Š Workload: X/Y jobs</span
                >
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="row">
        <% if (technicians && technicians.length > 0) { %> <%
        technicians.forEach(function(technician) { %>
        <div class="col-md-4 mb-4">
          <div class="technician-card">
            <img
              src="<%= technician.userImage || '/images/default-avatar.png' %>"
              alt="<%= technician.name %>"
              class="rounded-circle mb-3"
              style="width: 100px; height: 100px; object-fit: cover"
            />

            <div class="d-flex justify-content-between align-items-start mb-2">
              <h4 class="mb-0"><%= technician.name %></h4>
              <span
                class="badge availability-badge bg-<%= technician.availability === 'available' ? 'success' : technician.availability === 'busy' ? 'danger' : 'warning' %>"
              >
                <% if (technician.availability === 'available') { %> âœ…
                Available <% } else if (technician.availability === 'busy') { %>
                ğŸš« Busy <% } else { %> ğŸï¸ On Leave <% } %>
              </span>
            </div>

            <p class="text-primary">
              <strong><%= technician.specialization %> Expert</strong>
            </p>

            <p>
              <strong>Experience:</strong> <%= technician.experience %> years
            </p>
            <!-- Skills -->
            <% if (technician.skills && technician.skills.length > 0) { %>
            <div class="mb-3">
              <strong>Skills:</strong>
              <div class="d-flex flex-wrap gap-1 mt-1">
                <% technician.skills.forEach(skill => { %>
                <span class="badge bg-light text-dark border"
                  ><%= skill %></span
                >
                <% }); %>
              </div>
            </div>
            <% } %>

            <!-- Service Areas -->
            <% if (technician.serviceAreas && technician.serviceAreas.length >
            0) { %>
            <div class="mb-3">
              <strong>Service Areas:</strong>
              <div class="d-flex flex-wrap gap-1 mt-1">
                <% technician.serviceAreas.forEach(area => { %>
                <span class="badge bg-info text-white"><%= area %></span>
                <% }); %>
              </div>
            </div>
            <% } %>

            <!-- Booking Button with Availability Logic -->
            <% if (user) { %>
            <!-- User is logged in -->
            <% if (technician.availability === 'available' &&
            technician.currentWorkload < technician.maxWorkload) { %>
            <!-- Technician is available -->
            <!-- User is logged in -->
            <a
              href="/bookings/book/<%= technician.userId %>"
              class="btn btn-primary w-100"
            >
              âœ… Book Now
            </a>
            <small class="text-success d-block text-center mt-1">
              Ready for new assignments
            </small>
            <% } else if (technician.availability === 'available' &&
            technician.currentWorkload >= technician.maxWorkload) { %>
            <!-- Technician is available but at full capacity -->
            <button class="btn btn-warning w-100" disabled>
              âš ï¸ At Full Capacity
            </button>
            <small class="text-warning d-block text-center mt-1">
              Manager will assign alternative if needed
            </small>
            <% } else if (technician.availability === 'busy') { %>
            <!-- Technician is busy -->
            <button class="btn btn-secondary w-100" disabled>
              ğŸš« Currently Busy
            </button>
            <small class="text-muted d-block text-center mt-1">
              Manager will assign alternative technician
            </small>
            <% } else if (technician.availability === 'on-leave') { %>
            <!-- Technician is on leave -->
            <button class="btn btn-secondary w-100" disabled>
              ğŸï¸ On Leave
            </button>
            <small class="text-muted d-block text-center mt-1">
              Currently unavailable
            </small>
            <% } %> <% } else { %>
            <!-- User is NOT logged in -->
            <a href="/register" class="btn btn-outline-primary w-100">
              Register to Book
            </a>
            <small class="text-muted d-block text-center mt-1">
              Sign up to book our technicians
            </small>
            <% } %>
          </div>
        </div>
        <% }); %> <% } else { %>
        <div class="col-12 text-center">
          <p>No technicians available at the moment.</p>
        </div>
        <% } %>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
