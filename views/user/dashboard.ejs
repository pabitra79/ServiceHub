<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>User Dashboard - ServiceHub</title>
    <link href="/css/user-dashboard.css" rel="stylesheet" />
    <link href="/css/navbar.css" rel="stylesheet" />
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <div class="dashboard-container">
      <!-- Sidebar -->
      <div class="sidebar">
        <div class="sidebar-header">
          <div class="logo">
            <i class="fas fa-tools"></i>
            <span>ServiceHub</span>
          </div>
        </div>

        <div class="user-profile">
          <div class="user-avatar">
            <img
              src="<%= user.userImage || '/images/default-avatar.png' %>"
              alt="User Avatar"
            />
          </div>
          <div class="user-info">
            <h3><%= user.name %></h3>
            <p><%= user.email %></p>
            <span class="user-badge">Customer</span>
          </div>
        </div>

        <nav class="sidebar-nav">
          <a href="/user/dashboard" class="nav-item active">
            <i class="fas fa-home"></i>
            <span>Dashboard</span>
          </a>
          <a href="/bookings/my-bookings" class="nav-item">
            <i class="fas fa-concierge-bell"></i>
            <span>View My Bookings</span>
          </a>
          <a href="/bookings/techniciansBook" class="nav-item">
            <i class="fas fa-user-cog"></i>View All Technicians
          </a>

          <a href="/bookings/techniciansBook" class="nav-item">
            <i class="fas fa-plus-circle"></i>
            <span>Book New Service</span>
          </a>
          <a href="/feedback/submit" class="nav-item">
      <i class="fas fa-comments"></i>
      <span>Submit Feedback</span>
    </a>
          <a href="/profile" class="nav-item">
            <i class="fas fa-user"></i>
            <span>Profile</span>
          </a>
          <a href="/settings" class="nav-item">
            <i class="fas fa-cog"></i>
            <span>Settings</span>
          </a>
          <a href="/logout" class="nav-item logout">
            <i class="fas fa-sign-out-alt"></i>
            <span>Logout</span>
          </a>
        </nav>
      </div>

      <!-- Main Content -->
      <div class="main-content">
        <!-- Top Header -->
        <header class="top-header">
          <div class="header-left">
            <h1>Dashboard</h1>
            <p>Welcome back, <%= user.name %>! ðŸ‘‹</p>
          </div>
          <div class="header-right">
            <div class="notification-bell">
              <i class="fas fa-bell"></i>
              <span class="notification-count">3</span>
            </div>
            <div class="user-menu">
              <img
                src="<%= user.userImage || '/images/default-avatar.png' %>"
                alt="User"
              />
            </div>
          </div>
        </header>

        <!-- Stats Cards -->
        <div class="stats-grid">
          <div class="stat-card">
            <div class="stat-icon pending">
              <i class="fas fa-clock"></i>
            </div>
            <div class="stat-info">
              <h3><%= stats.pending %></h3>
              <p>Pending Services</p>
            </div>
          </div>
          <div class="stat-card">
            <div class="stat-icon in-progress">
              <i class="fas fa-tools"></i>
            </div>
            <div class="stat-info">
              <h3><%= stats.inProgress %></h3>
              <p>In Progress</p>
            </div>
          </div>
          <div class="stat-card">
            <div class="stat-icon completed">
              <i class="fas fa-check-circle"></i>
            </div>
            <div class="stat-info">
              <h3><%= stats.completed %></h3>
              <p>Completed</p>
            </div>
          </div>
          <div class="stat-card">
            <div class="stat-icon total">
              <i class="fas fa-list-alt"></i>
            </div>
            <div class="stat-info">
              <h3><%= stats.total %></h3>
              <p>Total Services</p>
            </div>
          </div>
        </div>
        <!-- Recent Services Section -->
        <div class="content-section">
          <div class="section-header">
            <h2>Recent Service Requests</h2>
            <a href="/bookings/my-bookings" class="view-all">View All</a>
          </div>

          <div class="services-table">
            <div class="table-header">
              <div>Service Type</div>
              <div>Problem</div>
              <div>Technician</div>
              <div>Status</div>
              <div>Date</div>
              <div>Action</div>
            </div>

            <div class="table-body">
              <% if (recentServices && recentServices.length > 0) { %> <%
              recentServices.forEach(service => { %>
              <div class="table-row">
                <div class="service-type"><%= service.serviceType %></div>
                <div class="issue"><%= service.problemDescription %></div>
                <div class="technician">
                  <%= service.technicianName || 'Not assigned' %>
                </div>
                <div class="status-badge <%= service.status %>">
                  <%= service.status.replace(/-/g, ' ') %>
                </div>
                <div class="date">
                  <%= new Date(service.createdAt).toLocaleDateString() %>
                </div>
                <div class="actions">
                  <a href="/bookings/my-bookings" class="btn-view"
                    >View Details</a
                  >
                </div>
              </div>
              <% }) %> <% } else { %>
              <div class="no-services">
                <p>
                  No service requests found.
                  <a href="/bookings/techniciansBook"
                    >Book your first service!</a
                  >
                </p>
              </div>
              <% } %>
            </div>
          </div>
        </div>
      <!-- Quick Actions -->
<div class="content-section">
  <div class="section-header">
    <h2>Quick Actions</h2>
  </div>
  <div class="quick-actions">
      <a href="/bookings/techniciansBook" class="quick-action-card">
      <i class="fas fa-plus-circle"></i>
      <span>Book New Service</span>
    </a>
    <a href="/bookings/my-bookings" class="quick-action-card">
      <i class="fas fa-history"></i>
      <span>Service History</span>
    </a>
    
    <a href="/profile" class="quick-action-card">
      <i class="fas fa-user-edit"></i>
      <span>Update Profile</span>
    </a>
    
    <a href="/support" class="quick-action-card">
      <i class="fas fa-headset"></i>
      <span>Contact Support</span>
    </a>
  </div>
</div>
    </div>

    <script src="/js/user-dashboard.js"></script>
  </body>
</html>
