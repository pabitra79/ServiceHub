<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link href="/css/navbar.css" rel="stylesheet" />
    <link href="/css/home.css" rel="stylesheet" />
    <style>
      .booking-card {
        border-radius: 10px;
        margin-bottom: 20px;
        border-left: 4px solid #007bff;
      }
      .status-pending {
        border-left-color: #ffc107;
      }
      .status-assigned {
        border-left-color: #17a2b8;
      }
      .status-in-progress {
        border-left-color: #007bff;
      }
      .status-completed {
        border-left-color: #28a745;
      }
      .status-cancelled {
        border-left-color: #dc3545;
      }
      .feedback-section {
        background: #f8f9fa;
        padding: 15px;
        border-radius: 8px;
        margin-top: 15px;
        border: 1px solid #e9ecef;
      }
      .star-rating {
        font-size: 24px;
        cursor: pointer;
      }
      .star-rating .star {
        color: #ddd;
        transition: color 0.2s;
        margin-right: 5px;
      }
      .star-rating .star:hover,
      .star-rating .star.active {
        color: #ffc107;
      }
      .char-count {
        font-size: 0.8rem;
        color: #6c757d;
      }
    </style>
  </head>
  <body>
    <%- include('../layouts/navbar') %>

    <div class="container mt-4">
      <!-- Flash Messages -->
      <% if (messages.success) { %>
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        <%= messages.success %>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="alert"
        ></button>
      </div>
      <% } %> <% if (messages.error) { %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <%= messages.error %>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="alert"
        ></button>
      </div>
      <% } %>

      <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>My Bookings</h2>
        <a href="/bookings/book/new" class="btn btn-primary"
          >Book New Service</a
        >
         <a href="/user/dashboard" class="btn btn-primary"
            <i class="fas fa-plus-circle"></i>
    <span>Back dashboard</span></a
            >
      </div>

      <% if (bookings.length === 0) { %>
      <div class="text-center py-5">
        <h4>No bookings yet</h4>
        <p>Book your first service with our expert technicians</p>
        <a href="/bookings/techniciansBook" class="btn btn-primary"
          >Find Technicians</a
        >
      </div>
      <% } else { %>
      <div class="row">
        <% bookings.forEach(booking => { %>
        <div class="col-md-6">
          <div class="card booking-card status-<%= booking.status %>">
            <div class="card-body">
              <div
                class="d-flex justify-content-between align-items-start mb-2"
              >
                <h5 class="card-title">
                  <%= booking.serviceType.toUpperCase() %> Service
                </h5>
                <span
                  class="badge bg-<%= booking.status === 'pending' ? 'warning' : booking.status === 'assigned' ? 'info' : booking.status === 'in-progress' ? 'primary' : booking.status === 'completed' ? 'success' : 'danger' %>"
                  ><%= booking.status %></span
                >
              </div>

              <p class="card-text">
                <strong>Problem:</strong> <%= booking.problemDescription %>
              </p>

              <div class="row">
                <div class="col-6">
                  <small
                    ><strong>Date:</strong> <%= new
                    Date(booking.preferredDate).toLocaleDateString() %></small
                  >
                </div>
                <div class="col-6">
                  <small
                    ><strong>Time:</strong> <%= booking.preferredTime %></small
                  >
                </div>
              </div>

              <div class="mt-2">
                <small
                  ><strong>Technician:</strong> <%= booking.technicianName ||
                  'Not assigned yet' %></small
                >
              </div>

              <% if (booking.assignedByName) { %>
              <div class="mt-1">
                <small
                  ><strong>Assigned by:</strong> <%= booking.assignedByName
                  %></small
                >
              </div>
              <% } %>

              <div class="mt-3">
                <small class="text-muted">
                  Booked on: <%= new
                  Date(booking.createdAt).toLocaleDateString() %>
                </small>
              </div>

              <!-- FEEDBACK SECTION - Only show for completed bookings without feedback -->
              <% if (booking.status === 'completed' && !booking.hasFeedback) {
              %>
              <div class="feedback-section mt-3">
                <h6 class="mb-3">How was your service experience?</h6>
                <form
                  action="/feedback/submit"
                  method="POST"
                  class="feedback-form"
                >
                  <input
                    type="hidden"
                    name="bookingId"
                    value="<%= booking._id %>"
                  />

                  <div class="mb-3">
                    <label class="form-label fw-bold">Service Rating:</label>
                    <div
                      class="star-rating mb-2"
                      id="rating-<%= booking._id %>"
                    >
                      <span class="star" data-rating="1">★</span>
                      <span class="star" data-rating="2">★</span>
                      <span class="star" data-rating="3">★</span>
                      <span class="star" data-rating="4">★</span>
                      <span class="star" data-rating="5">★</span>
                    </div>
                    <input
                      type="hidden"
                      name="rating"
                      id="rating-input-<%= booking._id %>"
                      required
                    />
                    <small class="text-muted"
                      >Click on stars to rate (1-5)</small
                    >
                  </div>

                  <div class="mb-3">
                    <label
                      for="comment-<%= booking._id %>"
                      class="form-label fw-bold"
                      >Comments (optional):</label
                    >
                    <textarea
                      class="form-control"
                      id="comment-<%= booking._id %>"
                      name="comment"
                      rows="3"
                      maxlength="500"
                      placeholder="Tell us about your experience with the service..."
                      oninput="updateCharCount(this, 'char-count-<%= booking._id %>')"
                    ></textarea>
                    <div class="char-count" id="char-count-<%= booking._id %>">
                      0/500 characters
                    </div>
                  </div>

                  <button type="submit" class="btn btn-success btn-sm">
                    <i class="fas fa-paper-plane"></i> Submit Feedback
                  </button>
                </form>
              </div>
              <% } %>

              <!-- Show if feedback already given -->
              <% if (booking.hasFeedback) { %>
              <div class="mt-3 p-2 bg-light rounded">
                <span class="badge bg-success me-2">
                  <i class="fas fa-check"></i> Feedback Submitted
                </span>
                <small class="text-muted">Thank you for your feedback!</small>
              </div>
              <% } %>
            </div>
          </div>
        </div>
        <% }); %>
      </div>
      <% } %>
    </div>

    <!-- Add Font Awesome for icons -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
    />
    <script src="/js/user-booking.js"></script>
    <script src="/js/home.js"></script>
    <script src="/js/navbar.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
