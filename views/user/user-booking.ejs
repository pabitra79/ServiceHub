<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link href="/css/navbar.css" rel="stylesheet" />
    <link href="/css/home.css" rel="stylesheet" />
    <style>
      .booking-card {
        border-radius: 10px;
        margin-bottom: 20px;
        border-left: 4px solid #007bff;
      }
      .status-pending {
        border-left-color: #ffc107;
      }
      .status-assigned {
        border-left-color: #17a2b8;
      }
      .status-in-progress {
        border-left-color: #007bff;
      }
      .status-completed {
        border-left-color: #28a745;
      }
      .status-cancelled {
        border-left-color: #dc3545;
      }
    </style>
  </head>
  <body>
    <%- include('../layouts/navbar') %>

    <div class="container mt-4">
      <!-- Flash Messages -->
      <% if (messages.success) { %>
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        <%= messages.success %>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="alert"
        ></button>
      </div>
      <% } %> <% if (messages.error) { %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <%= messages.error %>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="alert"
        ></button>
      </div>
      <% } %>

      <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>My Bookings</h2>
        <a href="/bookings/techniciansBook" class="btn btn-primary"
          >Book New Service</a
        >
      </div>

      <% if (bookings.length === 0) { %>
      <div class="text-center py-5">
        <h4>No bookings yet</h4>
        <p>Book your first service with our expert technicians</p>
        <a href="/bookings/techniciansBook" class="btn btn-primary"
          >Find Technicians</a
        >
      </div>
      <% } else { %>
      <div class="row">
        <% bookings.forEach(booking => { %>
        <div class="col-md-6">
          <div class="card booking-card status-<%= booking.status %>">
            <div class="card-body">
              <div
                class="d-flex justify-content-between align-items-start mb-2"
              >
                <h5 class="card-title">
                  <%= booking.serviceType.toUpperCase() %> Service
                </h5>
                <span
                  class="badge bg-<%= booking.status === 'pending' ? 'warning' : booking.status === 'assigned' ? 'info' : booking.status === 'in-progress' ? 'primary' : booking.status === 'completed' ? 'success' : 'danger' %>"
                  ><%= booking.status %></span
                >
              </div>

              <p class="card-text">
                <strong>Problem:</strong> <%= booking.problemDescription %>
              </p>

              <div class="row">
                <div class="col-6">
                  <small
                    ><strong>Date:</strong> <%= new
                    Date(booking.preferredDate).toLocaleDateString() %></small
                  >
                </div>
                <div class="col-6">
                  <small
                    ><strong>Time:</strong> <%= booking.preferredTime %></small
                  >
                </div>
              </div>

              <div class="mt-2">
                <small
                  ><strong>Technician:</strong> <%= booking.technicianName ||
                  'Not assigned yet' %></small
                >
              </div>

              <% if (booking.assignedByName) { %>
              <div class="mt-1">
                <small
                  ><strong>Assigned by:</strong> <%= booking.assignedByName
                  %></small
                >
              </div>
              <% } %>

              <div class="mt-3">
                <small class="text-muted">
                  Booked on: <%= new
                  Date(booking.createdAt).toLocaleDateString() %>
                </small>
              </div>
            </div>
          </div>
        </div>
        <% }); %>
      </div>
      <% } %>
    </div>
    <script src="/js/home.js"></script>
    <script src="/js/navbar.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
